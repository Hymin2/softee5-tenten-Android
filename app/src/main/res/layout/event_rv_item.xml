<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/rvCardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="17dp"
        app:cardCornerRadius="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/rvEventImage"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:src="@drawable/test1"
            android:scaleType="centerCrop"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/rvEventTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이벤트 이름"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        app:layout_constraintStart_toStartOf="@id/rvCardView"
        app:layout_constraintTop_toBottomOf="@id/rvCardView"/>

    <TextView
        android:id="@+id/rvEventDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이벤트 설명"
        android:textSize="14dp"
        android:layout_marginLeft="1dp"
        app:layout_constraintStart_toStartOf="@id/rvEventTitle"
        app:layout_constraintTop_toBottomOf="@id/rvEventTitle"/>
</androidx.constraintlayout.widget.ConstraintLayout>